.row
  .col-sm-11.col-lg-offset-1
    h1 Profile {{user.email}}
.row
  .col-md-6.col-md-offset-2.well
    p Name: {{user.profile.name}}
    p Website: {{user.profile.website}}
    p Location: {{user.profile.location}}
    p Gender: {{user.profile.gender}}

  .col-sm-2
    a.btn.btn-primary(href='/account/edit') Edit!

.row
  .col-sm-11.col-lg-offset-1
    h1 Owned Cars
.row
  .col-sm-9.col-md-offset-1
    div(ng-repeat='car in ownedCars')
      .col-md-4
        .well.well-sm
          .row
            .col-xs-8
              h3 {{car.name | lowercase}}
              h4 {{car.location | lowercase}}
            .col-xs-4
              h4
                span.label.label-danger {{car.price | currency:$}}
            .col-xs-12
              p {{car.dateFrom | date:'dd/MM/yyyy'}} - {{car.dateTo | date:'dd/MM/yyyy'}}
            .col-xs-3
              a.btn.btn-primary(ng-href='/cars/{{car._id}}') View
            .col-xs-3.col-lg-offset-5
              a.btn.btn-primary(ng-href='/cars/edit/{{car._id}}') Edit
