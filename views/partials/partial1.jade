.row
  .col-sm-9
    .row
      .col-xs-1
      form(name='carsQuery', role='form')
        .col-md-8
          span.col-sm-4
            input#addresspicker(name='location', ng-model='locationQuery',type="text",class="form-control", placeholder='Where?', required)
          span.col-sm-5
            .input-daterange.input-group
              input(datepicker, name='dateFrom', ng-model='$parent.dateQueryFrom',type="text",class="form-control", placeholder='start',required)
              span.input-group-addon to
              input(datepicker, name='dateTo', ng-model='$parent.dateQueryTo',type="text",class="form-control", placeholder='end', required)

          span.col-lg-3
            button.btn.btn-default(type="submit",ng-click='carQuery()',ng-disabled='!carsQuery.$valid') Submit


    br
    .row
      .col-lg-2
      .col-xs-10
        div(ng-show='message') {{message}}
        div.well(ng-repeat='car in cars')
          p {{car.name}}
          p {{car.location}}
          // p {{car.dateFrom}}
          // p {{car.dateTo}}

  // debug: print the database
  .col-xs-3.well
    h4 Database
    div.well(ng-repeat='car in carsDB')
      p {{car.name}}
      p {{car.location}}
      p {{car.dateFrom | date:'dd/MM/yyyy'}} to {{car.dateTo | date:'dd/MM/yyyy'}}
