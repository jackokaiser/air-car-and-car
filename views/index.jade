extends layout

block navigation
  .navbar.navbar-default.navbar-fixed-top(role="navigation")
    .container(ng-controller='NavCtrl')
      .navbar-header
        button.navbar-toggle(type="button",data-toggle="collapse",data-target="#bs-navbar")
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href='#') {{brand}}
      #bs-navbar.collapse.navbar-collapse
        ul.nav.navbar-nav
          li(ng-repeat='link in links', ng-class='{active: $index == selected}')
            a(href='{{link.url}}') {{link.name}}


// client side rendering via angular.js
block body
  div(ng-controller='RootCtrl')
    div(ng-view)


block scripts
  script(src='js/lib/angular/angular.js')
  script(src='js/app.js')
  script(src='js/services.js')
  script(src='js/controllers.js')
  script(src='js/filters.js')
  script(src='js/directives.js')

