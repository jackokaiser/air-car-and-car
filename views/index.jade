extends layout

block navigation
  .navbar.navbar-default.navbar-fixed-top(role="navigation")
    .navbar-inner
      .container(ng-controller='NavCtrl')
        .navbar-header
          button.navbar-toggle(type="button",data-toggle="collapse",data-target="#bs-navbar")
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='#') {{brand}}
        #bs-navbar.collapse.navbar-collapse
          ul.nav.navbar-nav
            li(ng-repeat='link in links', ng-class='{active: link.url == url}')
              a(href='{{link.url}}') {{link.name}}
          ul.nav.navbar-nav.pull-right
            li(ng-class='{active: "/signup" == url}')
              a(href='/signup') Sign up
            li(ng-class='{active: "/login" == url}')
              a(href='/login') Login


// client side rendering via angular.js
block body
  div(ng-controller='RootCtrl')
    div(alert-bar, alertMessage="errorService.errorMessage")
    div(ng-view)
